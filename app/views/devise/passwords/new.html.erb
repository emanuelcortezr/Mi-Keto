<div class="container" style="margin-top:8em;">
  <div class="row">
    <div class="card text-center col-6 offset-3">
      <div class="card-body">
      <h5 class="card-title">¿Olvidó su contraseña?</h5>
        <br/>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control", :placeholder=>"Introduzca el correo electrónico" %>
          </div>
          <div class="actions">
            <%= f.submit "Enviarme restablecer instrucciones de contraseña", :class=>"btn btn-primary btn-lg btn-block" %>
          </div>
          <br/>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>