<div class="container" style="margin-top:8em;">
  <div class="row">
    <div class="card text-center col-6 offset-3">
      <div class="card-body">
        <h5 class="card-title">Cambio de contraseña</h5>
        <br/>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field mb-4">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres mínimo)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :class=>"form-control", :placeholder=>"Introduzca la contraseña" %>
          </div>
          <div class="field mb-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"form-control", :placeholder=>"Vuelva a escribir la contraseña" %>
          </div>
          <div class="actions">
            <%= f.submit "Cambiar la contraseña", :class=>"btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>
        <br/>
        <%= render "devise/shared/links" %>
