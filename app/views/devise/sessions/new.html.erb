<div class="container" style="margin-top:8em;">
  <div class="row">
    <div class="card text-center col-6 offset-3">
      <div class="card-body">
        <h5 class="card-title">Acceder</h5>
        <p class="card-text">Ir a Keto</p>
        <br/>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control", :placeholder=>"Introduzca el correo electrónico" %>
          </div>

          <div class="field mb-4">
            <%= f.password_field :password, autocomplete: "current-password", :class=>"form-control", :placeholder=>"Introduzca la contraseña" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Recordarme" %>
            </div>
          <% end %>

          <div class="actions mb-3">
            <%= f.submit "Iniciar sesión", :class=>"btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
