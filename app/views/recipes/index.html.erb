<div class="container mt-5">
<div class="card">
<div class="row">
<div class="col-2">
</div>
<div class="offset-8 col-2"></div>
</div>
<div class="row">
<div class="col">
<div class="card-body">
<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-2">
<h1>Recetas</h1>
</div>
<div class="offset-8 col-2">
<%= link_to 'Crear Receta', new_recipe_path, :class=> "btn btn-primary" %>
</div>
</div>
<table id="table_id" class="display">
<thead>
<tr>
<th>Nombre de la receta</th>
<th>Descripcion</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
<% @recipes.each do |recipe| %>
<tr>
<td><%= recipe.name %></td>
<td><%= recipe.description %></td>
<td><%= link_to ('<i class="fa fa-search"></i>').html_safe, recipe %></td>
<td><%= link_to ('<i class="fa fa-pencil"></i>').html_safe, edit_recipe_path(recipe) %></td>
<td><%= link_to ('<i class="fa fa-trash"></i>').html_safe, recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
</div>
</div>
<br>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
<script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
<script>
$(document).ready( function () {
$('#table_id').DataTable();
});
</script>