
<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header d-flex justify-content-between">
          <div>
            <button type="button" class="btn btn-light">Ingredientes</button>
          </div>
          <div>
          </div>
          <%= link_to 'Crear Ingrediente', new_ingredient_path, :class=> "btn btn-primary" %>
        </div>
        <div class="card-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Nombre</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @ingredients.each do |ingredient| %>
                <tr>
                  <td><%= ingredient.name %></td>
                  <td><%= link_to ('<i class="fa fa-search"></i>').html_safe, ingredient %></td>
                  <td><%= link_to ('<i class="fa fa-pencil"></i>').html_safe, edit_ingredient_path(ingredient) %></td>
                  <td><%= link_to ('<i class="fa fa-trash"></i>').html_safe, ingredient, method: :delete, data: { confirm: 'Â¿Esta seguro de eliminar el registro?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
