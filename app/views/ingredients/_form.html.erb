<%= form_with(model: ingredient, local: true) do |form| %>
  <% if ingredient.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <div id="error_explanation">
        <h4 class="alert-heading"><%= pluralize(ingredient.errors.count, "error(es)") %> prohibi√≥ guardar este ingrediente:</h4>
        <hr>
        <p>
          <% ingredient.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-6">
      <div class="field">
        <%= form.label :name, 'Nombre' %>
        <%= form.text_field :name, :class=>"form-control" %>
      </div>
    </div>
  </div>
  <br/>
  <br/>
  <div class="actions">
    <%= form.submit "Guardar cambios", :class=>"btn btn-primary state_buttom" %>
  </div>
<% end %>
